[core]
	pager = ~/.bin/delta
	editor = nvim
	quotepath = false
	autocrlf = input
[interactive]
    diffFilter = delta --color-only --features=interactive
[add.interactive]
	useBuiltin = false # required for git 2.37.0
[delta]
	theme = GitHub
	side-by-side = true
	line-numbers = true
	navigate = true    # use n and N to move between diff sections
	light = true
[merge]
	tool = nvim
	prompt = false
	conflictStyle = diff3
[pull]
	ff = only
[init]
	defaultBranch = main
[credential]
	helper = store
[commit]
	verbose = true
	gpgsign = true
[diff]
	submodule = log
	colorMoved = default
[difftool]
	prompt = false
	trustExitCode = true
[status]
	submodulesummary = 1
[push]
	default = simple
	recurseSubmodules = check
[alias]
	s = status
    a = add
    la = log --pretty=oneline --all --graph --decorate
	aa = add -A
	co = checkout
	br = branch
	ci = commit
	st = status
	rs = restore
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[clean]
	requireForce = false
[gc]
	auto = 0 # see https://donatstudios.com/yagni-git-gc
[log]
	date = format:%Y-%m-%d %H:%M:%S
